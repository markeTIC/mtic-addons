<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Inversion views -->
        <record id="investment_list_action" model="ir.actions.act_window">
            <field name="name">Inversiones</field>
            <field name="res_model">sigma2.investment</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click para crear una inversión. 
                </p>
                <p>
                    Mantenimiento de inversiones de SIGMa 2.
                    La inversión permite agrupar los costes asociados a inversiones.
                </p>
            </field>
        </record>

        <record id="investment_list_view" model="ir.ui.view">
            <field name="name">Lista de inversiones</field>
            <field name="model">sigma2.investment</field>
            <field name="arch" type="xml">
                <tree string="Lista de inversiones"> 
                    <field name="year"/>
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
		
		<record id="investment_form_view" model="ir.ui.view">
            <field name="name">Formulario inversión</field>
            <field name="model">sigma2.investment</field>
            <field name="arch" type="xml">
                <form string="Inversión">
                    <sheet>
                        <div class="oe_right oe_button_box">
                        </div>
                        <div class="oe_title" style="width: 25%%">
                            <h1>
	                        	<field name="code" placeholder="Código"/>
                            </h1>
                        </div>
                        <div class="oe_title" style="width: 75%%">
                            <h1>
                                <field name="name" placeholder="Inversión"/>
                            </h1>
                        </div>
                        <group colspan="4">
	                        <group>
	                            <field name="year"/>
	                            <field name="ammount" widget="monetary"/>
	                        </group>
	                        <group>
	                            <field name="active" groups="sigma2.admin_group"/>
	                        </group>
                        </group>
                        <group>
                            <field name="notes" nolabel="1" placeholder="Notas" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
