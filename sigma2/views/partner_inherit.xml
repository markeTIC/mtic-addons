<?xml version="1.0"?>
<openerp>
    <data>
        <record id="partner_tree_view" model="ir.ui.view">
            <field name="name">sigma2.partner_tree_view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="priority" eval="32"/>
            <field name="arch" type="xml">
                <data>
                    <field name="phone" position="before">
                        <field name="contact"/>
                    </field>
                </data>
            </field>
        </record>

        <record id="partner_form_view" model="ir.ui.view">
            <field name="name">sigma2.partner_form_view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="32" />
            <field name="arch" type="xml">
                <data>
                    <field name="function" position="before">
                        <field name="contact"/>
                    </field>
                    <xpath expr="//form[@string='Contact']/sheet/div/field[@name='use_parent_address']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>
                    <xpath expr="//form[@string='Contact']/sheet/div/label[@for='use_parent_address']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>
                 </data>
            </field>
        </record>

        <!-- Partner - Contacto-->
        <record id="partner_contacto_tree_view" model="ir.ui.view">
            <field name="name">sigma2.partner_contacto_tree_view</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree string="Contactos">
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="function" invisible="1"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                    <field name="email"/>
                    <field name="user_id" invisible="1"/>
                    <field name="is_company" invisible="1"/>
                    <field name="country_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="partner_supplier_form_action" model="ir.actions.act_window">
            <field name="name">Proveedores</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="limit">200</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'search_default_supplier': 1,'default_customer': 0,'default_supplier': 1,'default_is_company': 1}</field>
            <field name="filter" eval="True"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Pulse para añadir un proveedor
              </p>
            </field>
        </record>

        <record id="partner_contact_form_action" model="ir.actions.act_window">
            <field name="name">Contactos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="limit">200</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="partner_contacto_tree_view"/>
            <field name="domain">[('customer','=',0),('supplier','=',0),('is_company','=',0),('type','=','contact'),('use_parent_address','=',1)]</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="filter" eval="True"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Pulse para añadir un contacto
              </p>
            </field>
        </record>

    </data>
</openerp>

