<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Procedimiento views -->
        <record id="procedure_list_action" model="ir.actions.act_window">
            <field name="name">Procedimientos</field>
            <field name="res_model">sigma2.procedure</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click para crear un procedimiento de mantenimiento. 
                </p>
                <p>
                    Mantenimiento de procedimientos de SIGMa 2.
                    El procedimiento define el método a aplicar en la tarea de mantenimiento preventivo.
                </p>
            </field>
        </record>

        <record id="procedure_list_view" model="ir.ui.view">
            <field name="name">Lista de procedimientos</field>
            <field name="model">sigma2.procedure</field>
            <field name="arch" type="xml">
                <tree string="Lista de procedimientos"> 
                    <field name="display_name"/>
                </tree>
            </field>
        </record>
		
		<record id="procedure_form_view" model="ir.ui.view">
            <field name="name">Formulario procedimiento</field>
            <field name="model">sigma2.procedure</field>
            <field name="arch" type="xml">
                <form string="Procedimiento de mantenimiento">
                    <sheet>
                        <div class="oe_right oe_button_box">
                        </div>
                        <div class="oe_title" style="width: 25%%">
                            <h1>
	                        	<field name="code" placeholder="Código"/>
                            </h1>
                        </div>
                        <div class="oe_title" style="width: 75%%">
                            <h1>
                                <field name="name" placeholder="Nombre del procedimiento"/>
                            </h1>
                        </div>
                        <group colspan="4">
	                        <group>
	                            <field name="active"/>
	                        </group>
                        </group>
                        <notebook>
                        	 <page string="Notas">
		                        <group>
		                            <field name="notes" nolabel="1" placeholder="Notas" />
		                        </group>
                        	 </page>
                        	 <page string="Gamas relacionadas">
		                        <field name="action_planning_ids" nolabel="1">
		                        	<tree string="Gamas">
					                    <field name="asset_id"/>
					                    <field name="instruction"/>
					                    <field name="period_number"/>
					                    <field name="period_type"/>
		                        	</tree>
		                        </field>
                        	 </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="procedure_search_view" model="ir.ui.view">
            <field name="name">sigma2.procedure.search</field>
            <field name="model">sigma2.procedure</field>
            <field name="arch" type="xml">
                <search string="Procedimiento">
                    <field name="display_name"/>
                </search>
            </field>
        </record>

    </data>
</openerp>
