<?xml version="1.0" ?>
<openerp>
<data noupdate="0">

    <record model="ir.module.category" id="module_category_sigma2">
        <field name="name">Sigma 2</field>
        <field name="description">Sistema Integral de Gestión de Mantenimiento</field>
        <field name="sequence">1</field>
    </record>

    <record id="production_group" model="res.groups">
        <field name="name">Usuario producción</field>
        <field name="comment">Usuario de producción de SIGMA 2 (entrada y consulta de órdenes de reparación y mejora)</field>
        <field name="category_id" ref="sigma2.module_category_sigma2"/>
    </record>

    <record id="user_group" model="res.groups">
        <field name="name">Usuario mantenimiento</field>
        <field name="comment">Usuario de mantenimiento de SIGMA 2 (acceso a todas las opciones normales de mantenimiento)</field>
        <field name="category_id" ref="sigma2.module_category_sigma2"/>
        <field name="implied_ids" eval="[(4, ref('sigma2.production_group'))]"/>
    </record>

    <record id="manager_group" model="res.groups">
        <field name="name">Responsable mantenimiento</field>
        <field name="comment">Responsable de mantenimiento de SIGMA 2 (acceso a todas las opciones de mantenimiento)</field>
        <field name="category_id" ref="sigma2.module_category_sigma2"/>
        <field name="implied_ids" eval="[(4, ref('sigma2.user_group'))]"/>
    </record>

    <record id="admin_group" model="res.groups">
        <field name="name">Administrador SIGMA 2</field>
        <field name="comment">Administrador de SIGMA 2</field>
        <field name="category_id" ref="sigma2.module_category_sigma2"/>
        <field name="implied_ids" eval="[(4, ref('sigma2.manager_group'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

</data>
</openerp>
