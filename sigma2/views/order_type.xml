<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Tipo de orden views -->
        <record id="order_type_list_action" model="ir.actions.act_window">
            <field name="name">Tipos de orden de mantenimiento</field>
            <field name="res_model">sigma2.order.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click para crear un tipo de orden de mantenimiento. 
                </p>
                <p>
                    Mantenimiento de tipos de órdenes de SIGMa 2.
                    El tipo de orden permite clasificar las órdenes de mantenimiento.
                </p>
            </field>
        </record>

        <record id="order_type_list_view" model="ir.ui.view">
            <field name="name">Lista de tipos de órdenes</field>
            <field name="model">sigma2.order.type</field>
            <field name="arch" type="xml">
                <tree string="Lista de tipos de órdenes"> 
                    <field name="code"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="counter"/>
                </tree>
            </field>
        </record>
		
		<record id="order_type_form_view" model="ir.ui.view">
            <field name="name">Formulario tipo de orden</field>
            <field name="model">sigma2.order.type</field>
            <field name="arch" type="xml">
                <form string="Tipo de orden">
                    <sheet>
                        <div class="oe_right oe_button_box">
                        </div>
                        <div class="oe_title" style="width: 15%%">
                            <h1>
	                        	<field name="code" placeholder="Código"/>
                            </h1>
                        </div>
                        <div class="oe_title" style="width: 85%%">
                            <h1>
                                <field name="name" placeholder="Tipo de orden"/>
                            </h1>
                        </div>
                        <group colspan="4">
	                        <group>
	                            <field name="type"/>
	                            <field name="counter"/>
	                            <field name="active" groups="sigma2.admin_group"/>
	                        </group>
                        </group>
                        <group>
                            <field name="notes" nolabel="1" placeholder="Notas" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
