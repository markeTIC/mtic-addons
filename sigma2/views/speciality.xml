<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Especialidad views -->
        <record id="speciality_list_action" model="ir.actions.act_window">
            <field name="name">Especialidades</field>
            <field name="res_model">sigma2.speciality</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click para crear un especialidad de mantenimiento. 
                </p>
                <p>
                    Mantenimiento de especialidades de SIGMa 2.
                    El especialidad define las distintas áreas de especialización de los trabajos de mantenimiento.
                </p>
            </field>
        </record>

        <record id="speciality_list_view" model="ir.ui.view">
            <field name="name">Lista de especialidades</field>
            <field name="model">sigma2.speciality</field>
            <field name="arch" type="xml">
                <tree string="Lista de especialidades"> 
                    <field name="name"/>
                </tree>
            </field>
        </record>
		
		<record id="speciality_form_view" model="ir.ui.view">
            <field name="name">Formulario especialidad</field>
            <field name="model">sigma2.speciality</field>
            <field name="arch" type="xml">
                <form string="Especialidad de mantenimiento">
                    <sheet>
                        <div class="oe_right oe_button_box">
                        </div>
                        <div class="oe_title" style="width: 75%%">
                            <h1>
                                <field name="name" placeholder="Especialidad"/>
                            </h1>
                        </div>
                        <group colspan="4">
	                        <group>
	                            <field name="active"/>
	                        </group>
                        </group>
                        <group>
                            <field name="notes" nolabel="1" placeholder="Notas" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
