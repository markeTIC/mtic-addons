<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Activo views -->
        <record id="asset_list_view" model="ir.ui.view">
            <field name="name">Lista de activos</field>
            <field name="model">sigma2.asset</field>
            <field name="arch" type="xml">
                <tree string="Lista de activos" colors="grey:status == 'retired';orange:regulatory_inspection == True"> 
                    <field name="code"/>
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="asset_type_id"/>
                    <field name="status"/>
                    <field name="regulatory_inspection" invisible="1"/>
                </tree>
            </field>
        </record>
		
        <record id="asset_list_action" model="ir.actions.act_window">
            <field name="name">Activos</field>
            <field name="res_model">sigma2.asset</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="asset_list_view"/>
            <field name="limit">200</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click para crear un activo de mantenimiento (línea, máquina, útil, herramienta...). 
                </p>
                <p>
                    Mantenimiento de activos de mantenimiento de SIGMa 2.
                    Los activos de mantenimiento son todos aquellos equipos o conjuntos de equipos sobre los que se afectúan las diversas tareas de mantenimiento (reparaciones, mantenimiento preventivo, calibraciones, etc.).
                </p>
            </field>
        </record>

		<record id="asset_form_view" model="ir.ui.view">
            <field name="name">Formulario activo</field>
            <field name="model">sigma2.asset</field>
            <field name="arch" type="xml">
                <form string="Activo">
                    <sheet>
                        <div class="oe_right oe_button_box">
                        </div>
                        <div class="oe_title" style="width: 25%%">
                            <h1>
	                        	<field name="code" placeholder="Código"/>
                            </h1>
                        </div>
                        <div class="oe_title" style="width: 75%%">
                            <h1>
                                <field name="name" placeholder="Nombre"/>
                            </h1>
                        </div>
                        <group colspan="4">
	                        <group>
                                <field name="parent_id"/>
	                            <field name="asset_type_id"/>
	                            <field name="asset_class_id"/>
	                            <field name="location_id"/>
	                            <field name="regulatory_inspection" invisible="1"/>
	                            <field name="applicable_regulations" attrs="{'invisible':[('regulatory_inspection', '=', False)]}"/>
	                        </group>
	                        <group>
	                            <field name="serial_number"/>
	                            <field name="reference"/>
	                            <field name="status"/>
	                            <field name="stop_rate"/>
	                            <field name="active"/>
	                        </group>
                        </group>
                        <notebook>
                        	 <page string="Notas">
		                        <group>
		                            <field name="notes" nolabel="1" placeholder="Notas" />
		                        </group>
                        	 </page>
                        	 <page string="Componentes">
		                        <field name="child_ids" nolabel="1">
		                        	<tree string="Componentes" colors="lightgrey:status == 'retired';orange:regulatory_inspection == True">
		                        		<field name="code"/>
		                        		<field name="name"/>
		                        		<field name="asset_type_id"/>
		                        		<field name="status"/>
					                    <field name="regulatory_inspection" invisible="1"/>
		                        	</tree>
		                        </field>
                        	 </page>
                        	 <page string="Gamas preventivo">
		                        <field name="action_planning_ids" nolabel="1">
		                        	<tree string="Gamas">
					                    <field name="procedure_id"/>
					                    <field name="instruction"/>
					                    <field name="period_number"/>
					                    <field name="period_type"/>
		                        	</tree>
		                        </field>
                        	 </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="asset_search_view" model="ir.ui.view">
            <field name="name">sigma2.asset.search</field>
            <field name="model">sigma2.asset</field>
            <field name="arch" type="xml">
                <search string="Activo">
                    <field name="display_name"/>
                    <filter string="Líneas" name="filter_lines" domain="[('asset_type_id.type','=','line')]"/>
                    <filter string="Máquinas" name="filter_machines" domain="[('asset_type_id.type','=','machine')]"/>
                    <filter string="Piezas" name="filter_parts" domain="[('asset_type_id.type','=','part')]"/>
                    <separator />
                    <filter string="Activos raíz (sin padre)" name="filter_root_assets" domain="[('parent_id','=',False)]"/>
                    <separator />
                    <filter string="Inspección reglamentaria" name="filter_regulatory_inspection" domain="[('regulatory_inspection','=',True)]"/>
                </search>
            </field>
        </record>

        <record id="asset_line_list_view" model="ir.ui.view">
            <field name="name">Lista de líneas</field>
            <field name="model">sigma2.asset</field>
            <field name="arch" type="xml">
                <tree string="Lista de líneas"  colors="grey:status == 'retired';orange:regulatory_inspection == True">
                	<field name="code"/>
                    <field name="name"/>
                    <field name="asset_type_id"/>
                    <field name="status"/>
                    <field name="regulatory_inspection" invisible="1"/>
                </tree>
            </field>
        </record>
		
        <record id="asset_lines_list_action" model="ir.actions.act_window">
            <field name="name">Líneas</field>
            <field name="res_model">sigma2.asset</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="asset_line_list_view"/>
            <field name="context">{"search_default_filter_lines":1}</field>
        </record>

        <record id="asset_machines_list_action" model="ir.actions.act_window">
            <field name="name">Máquinas</field>
            <field name="res_model">sigma2.asset</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="asset_list_view"/>
            <field name="search_view_id" ref="asset_search_view"/>
            <field name="context">{"search_default_filter_machines":1}</field>
            <field name="limit">200</field>
        </record>

    </data>
</openerp>
