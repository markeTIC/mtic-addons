<?xml version="1.0"?>
<openerp>
    <data noupdate="1">
        <!-- Generate preventive -->
        <record id="ir_cron_generate_preventive" model="ir.cron">
            <field name="name">Generar preventivo</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model" eval="'sigma2.action.planning'"/>
            <field name="function" eval="'do_generate_preventive'"/>
            <field name="args" eval="'(\'A\',0,)'"/>
        </record>

        <!-- Generate regulatory preventive -->
        <record id="ir_cron_generate_regulatory_preventive" model="ir.cron">
            <field name="name">Generar preventivo (inspecciones reglamentarias)</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model" eval="'sigma2.action.planning'"/>
            <field name="function" eval="'do_generate_preventive'"/>
            <field name="args" eval="'(\'B\', 60,)'"/>
        </record>

        <!-- Generate calibration preventive -->
        <record id="ir_cron_generate_calibration_preventive" model="ir.cron">
            <field name="name">Generar preventivo (calibraciones)</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model" eval="'sigma2.action.planning'"/>
            <field name="function" eval="'do_generate_preventive'"/>
            <field name="args" eval="'(\'C\', 60,)'"/>
        </record>
    </data>
</openerp>
