<?xml version="1.0"?>
<openerp>
    <data>
        <record id="purchase_order_form_view" model="ir.ui.view">
            <field name="name">sigma2.purchase_order_form_view</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="priority" eval="32" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@string='Products']/field/tree/field[@name='taxes_id']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>
                 </data>
            </field>
        </record>

        <record id="incoming_picking_action" model="ir.actions.act_window">
            <field name="name">Albaranes de compra</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.picking</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="domain">[('picking_type_code', '=', 'incoming')]</field>
            <field name="context">{}</field>
            <field name="search_view_id" eval="False"/> <!-- Force empty -->
            <field name="view_id" eval="False"/> <!-- Force empty -->
        </record>

    </data>
</openerp>

