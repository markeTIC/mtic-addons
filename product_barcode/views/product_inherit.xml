<?xml version="1.0"?>
<openerp>
    <data>
        <record id="product_template_only_form_view" model="ir.ui.view">
            <field name="name">product_barcode.product_template_only_form_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="priority" eval="32" />
            <field name="arch" type="xml">
                <data>
                    <field name="ean13"  position="replace" />
                    <field name="active" position="before">
                        <field name="barcode" attrs="{'invisible': [('product_variant_count', '>', 1)]}"/>
                    </field>>
                 </data>
            </field>
        </record>

        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">product_barcode.product_normal_form_view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="priority" eval="32" />
            <field name="arch" type="xml">
                <data>
                    <field name="ean13"  position="replace" />
                    <field name="active" position="before">
                        <field name="barcode"/>
                    </field>>
                 </data>
            </field>
        </record>

        <record id="product_search_form_view" model="ir.ui.view">
            <field name="name">product_barcode.product_search_form_view</field>
            <field name="model">product.template</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="barcode" filter_domain="[('barcode','=',self)]"/>
                </field>
            </field>
        </record>

    </data>
</openerp>

