<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Fabricante views -->
        <record id="manufacturer_list_action" model="ir.actions.act_window">
            <field name="name">Fabricantes</field>
            <field name="res_model">manufacturer.manufacturer</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click para crear un fabricante. 
                </p>
                <p>
                    Mantenimiento de datos de fabricantes de productos.
                    Se puede indicar un fabricante en la ficha del producto.
                </p>
            </field>
        </record>

        <record id="manufacturer_list_view" model="ir.ui.view">
            <field name="name">Lista de fabricantes</field>
            <field name="model">manufacturer.manufacturer</field>
            <field name="arch" type="xml">
                <tree string="Lista de fabricantes"> 
                    <field name="name"/>
                    <field name="description"/>
                    <field name="website"/>
                </tree>
            </field>
        </record>
		
		<record id="manufacturer_form_view" model="ir.ui.view">
            <field name="name">Formulario fabricante</field>
            <field name="model">manufacturer.manufacturer</field>
            <field name="arch" type="xml">
                <form string="Fabricante">
                    <sheet>
                        <div class="oe_right oe_button_box">
                        </div>
                        <field name="logo" widget='image' class="oe_left oe_avatar"/>
                        <div class="oe_title" style="width: 70%%">
                            <h1>
                                <field name="name" placeholder="Fabricante"/>
                            </h1>
                        </div>
                        <group colspan="4">
	                        <group>
			                    <field name="description"/>
		                        <field name="website" widget="url"/>
	                        </group>
	                        <group>
	                            <field name="partner_id" domain="[('supplier','=',True)]"/>
	                            <field name="active"/>
	                        </group>
                        </group>
                        <group>
                            <field name="notes" nolabel="1" placeholder="Notas" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- menus in settings - technical feature required -->
        <menuitem id="manufacturer_menu" name="Fabricantes" parent="base.menu_administration" groups="base.group_no_one" />
            <menuitem id="manufacturer_menu_manufacturer" parent="manufacturer_menu" action="manufacturer_list_action" sequence="10"/>

    </data>
</openerp>
