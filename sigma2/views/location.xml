<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Zona de fábrica views -->
        <record id="location_list_action" model="ir.actions.act_window">
            <field name="name">Zonas de fábrica</field>
            <field name="res_model">sigma2.location</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click para crear una zona de fábrica. 
                </p>
                <p>
                    Mantenimiento de zonas de fábrica de SIGMa 2.
                    La zona de fábrica permite agrupar los costes de las compras de recambios y de las OTs.
                </p>
            </field>
        </record>

        <record id="location_list_view" model="ir.ui.view">
            <field name="name">Lista de zonas de fábrica</field>
            <field name="model">sigma2.location</field>
            <field name="arch" type="xml">
                <tree string="Lista de zonas de fábrica"> 
                    <field name="name"/>
                    <field name="parent_id"/>
                </tree>
            </field>
        </record>
		
		<record id="location_form_view" model="ir.ui.view">
            <field name="name">Formulario zona de fábrica</field>
            <field name="model">sigma2.location</field>
            <field name="arch" type="xml">
                <form string="Zona">
                    <sheet>
                        <div class="oe_right oe_button_box">
                        </div>
                        <div class="oe_title" style="width: 75%%">
                            <h1>
                                <field name="name" placeholder="Zona de fábrica"/>
                            </h1>
                        </div>
                        <group colspan="4">
	                        <group>
                                <field name="parent_id"/>
	                            <field name="active"/>
	                        </group>
                        </group>
                        <group>
                            <field name="notes" nolabel="1" placeholder="Notas" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
