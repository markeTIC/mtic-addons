<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_preventive_list">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="report.external_layout">
                <div class="page">
                    <div class="oe_structure"/>

                    <!-- p style="page-break-after:always;"></p -->
                    <div class="row mt16">
                        <div class="col-xs-2 col-xs-offset-1" style="text-align: right;"><strong>Orden nº:</strong></div>
                        <div class="col-xs-2" ><span t-field="o.code"/></div>
                        <div class="col-xs-1" style="text-align: right;"><strong>Fecha:</strong></div>
                        <div class="col-xs-2" ><span t-field="o.date"/></div>
                        <div class="col-xs-2 col-xs-offset-8">
                            <img style="position: absolute;" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('Code128', o.code, 300, 50)"/>
                        </div>
                    </div>

                    <div class="row mt8">
                        <div class="col-xs-2 col-xs-offset-1" style="text-align: right;"><strong>Máquina:</strong></div>
                        <div class="col-xs-8" ><span t-field="o.asset_id.display_name"/></div>
                    </div>

                    <div class="row mt8">
                        <div class="col-xs-2 col-xs-offset-1" style="text-align: right;"><strong>Descripción:</strong></div>
                        <div class="col-xs-8" ><span t-field="o.description"/></div>
                    </div>

                    <div class="row mt16" style="text-align: center;">
                        <div class="col-xs-2 col-xs-offset-1" style="border: 1px solid #000000; border-right: 0px;"><strong>Nº ficha</strong></div>
                        <div class="col-xs-3" style="border: 1px solid #000000; border-right: 0px;"><strong>Nombre trabajador</strong></div>
                        <div class="col-xs-2" style="border: 1px solid #000000; border-right: 0px;"><strong>Fecha</strong></div>
                        <div class="col-xs-2" style="border: 1px solid #000000; border-right: 0px;"><strong>Tiempo</strong></div>
                        <div class="col-xs-1" style="border: 1px solid #000000;"><strong>Firma</strong></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-2 col-xs-offset-1" style="border: 1px solid #000000; border-right: 0px; border-top: 0px; font-size: 18px;">&amp;nbsp;</div>
                        <div class="col-xs-3" style="border: 1px solid #000000; border-right: 0px; border-top: 0px; font-size: 18px;">&amp;nbsp;</div>
                        <div class="col-xs-2" style="border: 1px solid #000000; border-right: 0px; border-top: 0px; font-size: 18px;">&amp;nbsp;</div>
                        <div class="col-xs-2" style="border: 1px solid #000000; border-right: 0px; border-top: 0px; font-size: 18px;">&amp;nbsp;</div>
                        <div class="col-xs-1" style="border: 1px solid #000000; border-top: 0px; font-size: 18px;">&amp;nbsp;</div>
                    </div>
                    <div class="row mt8 mb16">
                        <div class="col-xs-2 col-xs-offset-1" style="text-align: right; padding-top: 10px"><strong>Resultado:</strong></div>
                        <div class="col-xs-8" style="border: 1px solid #000000; font-size: 18px;">&amp;nbsp;</div>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </t>
</template>

</data>
</openerp>
