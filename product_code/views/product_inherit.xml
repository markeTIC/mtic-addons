<?xml version="1.0"?>
<openerp>
    <data>
        <record id="product_template_only_form_view" model="ir.ui.view">
            <field name="name">product_code.product_template_only_form_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="priority" eval="32" />
            <field name="arch" type="xml">
                <data>
                    <field name="default_code" position="replace" />
                    <field name="type" position="before">
                        <field name="default_code" attrs="{'invisible': [('product_variant_count', '>', 1)]}"/>
                    </field>>
                 </data>
            </field>
        </record>

        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">product_code.product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="priority" eval="32" />
            <field name="arch" type="xml">
                <data>
                    <field name="default_code" position="replace" />
                    <field name="type" position="before">
                        <field name="default_code"/>
                    </field>>
                 </data>
            </field>
        </record>

        <record id="product_template_kanban_view" model="ir.ui.view">
            <field name="name">product_code.product_template_kanban_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="priority" eval="32" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//a[@type='open']/span" position="replace">
                        <span t-if="(record.default_code.value) &amp;&amp; (record.product_variant_count.value &lt; 2)">
                            <field name="default_code"/>&amp;nbsp;-&amp;nbsp;
                        </span>
                    </xpath>
                 </data>
            </field>
        </record>

        <record id="product_template_tree_view" model="ir.ui.view">
            <field name="name">product_code.product_template_tree_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="priority" eval="32" />
            <field name="arch" type="xml">
                <data>
                    <field name="name" position="before">
                        <field name="default_code"/>
                    </field>
                </data>
            </field>
        </record>
