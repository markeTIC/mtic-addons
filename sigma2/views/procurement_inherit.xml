<?xml version="1.0"?>
<openerp>
    <data>
        <record id="procurement_tree_view" model="ir.ui.view">
            <field name="name">sigma2.procurement_order_tree_view</field>
            <field name="model">procurement.order</field>
            <field name="inherit_id" ref="procurement.procurement_tree_view"/>
            <field name="priority" eval="32" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//tree" position="attributes">
                        <attribute name="colors">red:date_planned&lt;current_date and state == 'exception';black:state=='running';green:state=='confirmed';lightgray:state=='done';orange:state=='cancel';blue:state == 'ready'</attribute>
                    </xpath>
                    <xpath expr="//field[@name='origin']" position="replace">
                    </xpath>
                    <xpath expr="//field[@name='location_id']" position="replace">
                    </xpath>
               </data>
            </field>
        </record>

    </data>
</openerp>

