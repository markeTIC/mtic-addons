<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Tipo de activo views -->
        <record id="asset_type_list_action" model="ir.actions.act_window">
            <field name="name">Tipos de activo</field>
            <field name="res_model">sigma2.asset.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click para crear un tipo de activo. 
                </p>
                <p>
                    Mantenimiento de tipos de activos de SIGMa 2.
                    El tipo del activo permite determinar la funcionalidad a aplicar al activo en función de su tipología, por ejemplo:<br/>
                    - Las <b>máquinas</b> tienen mantenimiento preventivo<br/>
                    - Las <b>piezas</b> no tienen mantenimiento preventivo<br/>
                    - Los <b>instrumentos de medida</b> tienen calibraciones<br/>
                </p>
            </field>
        </record>

        <record id="asset_type_list_view" model="ir.ui.view">
            <field name="name">Lista de tipos de activos</field>
            <field name="model">sigma2.asset.type</field>
            <field name="arch" type="xml">
                <tree string="Lista de tipos de activo"> 
                    <field name="name"/>
                    <field name="corrective"/>
                    <field name="preventive"/>
                    <field name="calibration"/>
                </tree>
            </field>
        </record>
		
		<record id="asset_type_form_view" model="ir.ui.view">
            <field name="name">Formulario tipo de activo</field>
            <field name="model">sigma2.asset.type</field>
            <field name="arch" type="xml">
                <form string="Tipo de activo">
                    <sheet>
                        <div class="oe_right oe_button_box">
                        </div>
                        <div class="oe_title" style="width: 75%%">
                            <h1>
	                            <field name="name" placeholder="Tipo de activo"/>
                            </h1>
                        </div>
                        <group colspan="4">
	                        <group>
	                            <field name="type"/>
			                    <field name="corrective"/>
	                            <field name="preventive"/>
	                        </group>
	                        <group>
	                            <field name="calibration"/>
	                            <field name="active"/>
	                        </group>
                        </group>
                        <group>
                            <field name="notes" nolabel="1" placeholder="Notas" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="asset_type_search_view" model="ir.ui.view">
            <field name="name">sigma2.asset.type.search</field>
            <field name="model">sigma2.asset.type</field>
            <field name="arch" type="xml">
                <search string="Tipo de activo">
                    <field name="name"/>
                    <filter string="Correctivo" name="filter_corrective" domain="[('corrective','=','True')]"/>
                    <separator />
                    <filter string="Preventivo" name="filter_preventive" domain="[('preventive','=','True')]"/>
                    <separator />
                    <filter string="Calibración" name="filter_calibration" domain="[('calibration','=','True')]"/>
                </search>
            </field>
        </record>

    </data>
</openerp>
