<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Etiquetas de producto -->
        <record id="product_label_list_action" model="ir.actions.act_window">
            <field name="name">Etiquetas de productos</field>
            <field name="res_model">sigma2.product_label</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click para crear una etiqueta de producto.
                </p>
                <p>
                    Mantenimiento de etiquetas de producto de SIGMa 2.
                </p>
            </field>
        </record>

        <record id="product_label_list_view" model="ir.ui.view">
            <field name="name">Lista de etiquetas de producto</field>
            <field name="model">sigma2.product_label</field>
            <field name="arch" type="xml">
                <tree string="Lista de etiquetas de producto">
                    <field name="barcode"/>
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
		
		<record id="product_label_form_view" model="ir.ui.view">
            <field name="name">Formulario etiqueta de producto</field>
            <field name="model">sigma2.product_label</field>
            <field name="arch" type="xml">
                <form string="Etiqueta de producto">
                    <sheet>
                        <div class="oe_right oe_button_box">
                        </div>
                        <div class="oe_title" style="width: 75%%">
                            <h1>
                                <field name="name" placeholder="DescripciÃ³n"/>
                            </h1>
                        </div>
                        <group colspan="4">
	                        <group>
                                <field name="barcode"/>
	                            <field name="code"/>
	                        </group>
                        </group>
                        <group>
                            <field name="active" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
