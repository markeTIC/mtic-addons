<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Gama views -->
        <record id="action_planning_list_action" model="ir.actions.act_window">
            <field name="name">Gamas</field>
            <field name="res_model">sigma2.action.planning</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click para crear un gama de mantenimiento. 
                </p>
                <p>
                    Mantenimiento de gamas de mantenimiento de SIGMa 2.
                    Las gamas de mantenimiento determinan el lanzamiento de Ã³rdenes de preventivo.
                </p>
            </field>
        </record>

        <record id="action_planning_list_view" model="ir.ui.view">
            <field name="name">Lista de gamas</field>
            <field name="model">sigma2.action.planning</field>
            <field name="arch" type="xml">
                <tree string="Lista de gamas"> 
                    <field name="asset_id"/>
                    <field name="procedure_id"/>
                    <field name="instruction"/>
                </tree>
            </field>
        </record>
		
		<record id="action_planning_form_view" model="ir.ui.view">
            <field name="name">Formulario gama</field>
            <field name="model">sigma2.action.planning</field>
            <field name="arch" type="xml">
                <form string="Activo">
                    <sheet>
                        <div class="oe_right oe_button_box">
                        </div>
                        <group colspan="4">
	                        <group>
	                            <field name="procedure_id"/>
                                <field name="order_type_id"/>
	                            <field name="asset_id"/>
	                            <field name="start_date"/>
	                            <field name="end_date"/>
	                            <field name="last_date"/>
	                            <field name="next_date"/>
	                        </group>
	                        <group>
	                            <field name="instruction"/>
	                            <field name="period_number"/>
	                            <field name="period_type"/>
	                            <field name="group"/>
	                            <field name="active"/>
	                        </group>
                        </group>
                        <group>
                            <field name="notes" nolabel="1" placeholder="Notas" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
